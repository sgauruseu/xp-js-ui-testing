<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>FieldSet</display-name>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="documentFieldSet">
      <label>Document</label>
      <items>
        <input name="heading" type="TextLine">
          <label>Heading</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="text" type="HtmlArea">
          <label>Text</label>
          <occurrences minimum="1" maximum="1"/>
          <help-text>HTML Area</help-text>
        </input>
        <input name="double" type="Double">
          <label>Double</label>
          <indexed>true</indexed>

          <occurrences minimum="2" maximum="4"/>
          <default>0</default>
        </input>
      </items>
    </field-set>
  </form>
</content-type>
